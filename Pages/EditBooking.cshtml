@page
@model WashOverflowV2.Pages.EditBookingModel
@{
    ViewData["Title"] = "Edit Booking";
}

<h2>Edit Booking</h2>

<form method="post" class="booking-form">
    <input type="hidden" asp-for="Booking.Id" />

    <div class="form-group">
        <label for="location">Location:</label>
        <select id="location" asp-for="Booking.StationId" class="form-control" required>
            @foreach (var station in Model.Stations)
            {
                <option value="@station.Id">@station.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="package">Package:</label>
        <select id="package" asp-for="Booking.PackageId" class="form-control" required>
            @foreach (var package in Model.Packages)
            {
                <option value="@package.Id">@package.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="date">Date and Time:</label>
        <input id="date" asp-for="Booking.Date" class="form-control" type="datetime-local" required />
    </div>

    <div class="form-group">
        <label for="regNumber">Registration Number:</label>
        <input id="regNumber" asp-for="Booking.RegistrationNumber" class="form-control"
               placeholder="Enter Car Registration Number"
               pattern="[A-Z]{3}[0-9]{3}" title="Enter a valid car registration number (ABC123)" required />
        <div id="regError" class="custom-error">Enter a valid license plate (e.g., ABC123).</div>
    </div>

    <!-- Checkbox to enable custom license plate -->
    <div class="form-group">
        <label>
            <input type="checkbox" id="customPlateCheckbox"> Custom license plate
        </label>
    </div>

    <div class="form-group d-flex gap-2">
        <button type="submit" class="btn btn-primary">Update Booking</button>
        <a asp-page="@(User.IsInRole("Admin") ? "/AdminDashboard" : "/MyBookingsPage")"
           class="btn btn-secondary d-inline-block">Cancel</a>
    </div>
</form>

<style>
    .booking-form {
        max-width: 600px;
        margin: auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f9f9f9;
    }

        .booking-form label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
        }

        .booking-form select,
        .booking-form input[type="datetime-local"],
        .booking-form input[type="text"] {
            width: 100%;
            padding: 8px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .booking-form input[type="submit"] {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

            .booking-form input[type="submit"]:hover {
                background-color: #0056b3;
            }

    .custom-error {
        display: none;
        color: red;
        font-size: 14px;
        margin-top: 5px;
        background: #ffdddd;
        padding: 5px;
        border: 1px solid red;
        border-radius: 5px;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const regInput = document.getElementById("regNumber");
        const errorBox = document.getElementById("regError");
        const customPlateCheckbox = document.getElementById("customPlateCheckbox");

        regInput.addEventListener("input", function () {
            const pattern = /^[A-Z]{3}[0-9]{3}$/;
            if (!customPlateCheckbox.checked && !pattern.test(regInput.value)) {
                errorBox.style.display = "block";
            } else {
                errorBox.style.display = "none";
            }
        });

        customPlateCheckbox.addEventListener("change", function () {
            if (customPlateCheckbox.checked) {
                regInput.removeAttribute("pattern");
                regInput.removeAttribute("title");
                regInput.classList.remove("invalid");
                errorBox.style.display = "none";
            } else {
                regInput.setAttribute("pattern", "[A-Z]{3}[0-9]{3}");
                regInput.setAttribute("title", "Enter a valid car registration number (ABC123)");
            }
        });
    });
</script>
