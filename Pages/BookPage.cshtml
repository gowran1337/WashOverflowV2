@page
@model WashOverflowV2.Pages.BookPageModel
@{
    ViewData["Title"] = "Book a Service";
}

<h2>Service Booking Form</h2>
<form method="post" class="booking-form">
    <label for="location">Location:</label>
    <select id="location" name="SelectedLocationId" asp-for="SelectedLocationId" required>
        @if (Model.Stations != null && Model.Stations.Any())
        {
            @foreach (var location in Model.Stations)
            {
                <option value="@location.Id">@location.Name</option>
            }
        }
        else
        {
            <option disabled>No locations available</option>
        }

    </select>

    <label for="month">Month:</label>
    <select id="month" name="SelectedMonth" asp-for="SelectedMonth" required>
        <option value="January">January</option>
        <option value="February">February</option>
        <option value="March">March</option>
        <option value="April">April</option>
        <option value="May">May</option>
        <option value="June">June</option>
        <option value="July">July</option>
        <option value="August">August</option>
        <option value="September">September</option>
        <option value="October">October</option>
        <option value="November">November</option>
        <option value="December">December</option>
    </select>

    <label for="day">Day:</label>
    <select id="day" name="SelectedDay" asp-for="SelectedDay" required>
        @for (int i = 1; i <= 31; i++)
        {
            <option value="@i">@i</option>
        }
    </select>

    <label for="time">Time of Day:</label>
    <select id="time" name="SelectedTime" asp-for="SelectedTime" required>
        @for (int hour = 8; hour < 22; hour++)
        {
            @for (int minutes = 0; minutes < 60; minutes += 15)
            {
                var time = $"{hour:D2}:{minutes:D2}";
                <option value="@time">@time</option>
            }
        }
        <option value="22:00">22:00</option>
    </select>

    <label for="package">Package:</label>
    <select id="package" name="SelectedPackageId" asp-for="SelectedPackageId" required>
        @foreach (var package in Model.Packages)
        {
            <option value="@package.Id">@package.Name</option>
        }
    </select>

    <input type="submit" value="Book Now">
</form>




<style>
    .booking-form {
        max-width: 600px;
        margin: auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f9f9f9;
    }

        .booking-form label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
        }

        .booking-form select,
        .booking-form input[type="submit"] {
            width: 100%;
            padding: 8px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        #BookingHead{
            			text-align: center;
        }
</style>