@page "{id:int}"
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@model WashOverflowV2.Pages.DetailsCarwashModel


@{
    ViewData["Title"] = "Station Details";
}

<a asp-page="/Index" class="btn btn-primary" style="position: absolute; top: 10px; left: 10px;">
    ← Tillbaka till startsidan
</a>

<h2>@Model.Station?.Name</h2>
<p>@Model.Station?.Address</p>

<!-- Visar paket som finns på stationen -->
<h3>Available Packages</h3>
<div class="container">
    <div class="row justify-content-center">
        @foreach (var package in Model.AvailablePackages)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@package.Name</h5>
                        <p class="card-text"><strong>Price: </strong>@package.Price kr</p>

                        <!-- Visar features som finns i paketen -->
                        <h6>Ingår i paketet:</h6>
                        <ul class="list-group list-group-flush">
                            @foreach (var feature in package.PackageFeatures.Select(pf => pf.Feature))
                            {
                                <li class="list-group-item px-0">
                                    <img src="~/images/@Model.FeatureImages[feature.Name]" alt="@feature.Name" width="40">
                                    @feature.Name
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Visa rätt knapp baserat på inloggningsstatus -->
<div class="container text-center mt-5">
    @if (SignInManager.IsSignedIn(User))
    {
        <h3>Ready to book your wash?</h3>
        <a asp-page="/BookPage" class="btn btn-primary btn-lg mt-3">Book a wash</a>
    }
    else
    {
        <h3>You need to log in to book a wash</h3>
        <a href="/Identity/Account/Login" class="btn btn-primary btn-lg mt-3">Log in to book</a>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
